<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Season</th>
      <th>Date</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.season %></td>
        <td><%= game.date %></td>
        <td><%= game.completed %></td>
        <td><%= link_to 'Show', league_season_game_path(@league, @season, game) %></td>
        <td><%= link_to 'Edit', edit_league_season_game_path(@league, @season, game) %></td>
        <td><%= link_to 'Destroy', league_season_game_path(@league, @season, game), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_league_season_game_path(@league, @season) %>
